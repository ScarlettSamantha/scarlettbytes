{% set home_url = url_for('catch_all', path='') %}
{% set is_home = request.path == home_url %}

{% if is_home %}
<div class="container">
    <section class="hero hero--compact hero--home">
        <div class="hero-layout">
            <div class="hero-text">
                <p class="eyebrow">Hi, I’m Scarlett</p>
                <h1 class="hero-title">Senior Software Engineer/Enthusiast</h1>
                <p class="hero-subtitle">
                    I build backend-heavy systems, infra, sometimes games.
                    Mostly Python, PHP, Linux and automation.
                </p>
                <div class="hero-chips">
                    <span class="chip chip-yellow">Rotterdam area, NL</span>
                    <span class="chip chip-green">Python · Flask · DevOps</span>
                    <span class="chip chip-blue">PHP 8.x · Symfony/Laravel</span>
                </div>
            </div>
        </div>
    </section>
</div>
{% endif %}